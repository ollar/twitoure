<h1>{{t 'signup.title'}}</h1>
<form {{action 'signup' on='submit' }}>
  <ul class="form-errors">
    {{#each model.errors as |error|}}
    <li>
      {{error.attribute}}: {{error.message}}
    </li>
    {{/each}}
  </ul>

  <div class="form-line">
    <label for="username">{{t 'signup.form.username.label'}}</label>
    {{input name="username" id="username" value=model.username}}
  </div>

  <div class="form-line">
    <label for="password">{{t 'signup.form.password.label'}}</label>
    {{input type="password" name="password" id="password" value=model.password}}
  </div>

  <div class="form-line">
    <label for="email">{{t 'signup.form.email.label'}}</label>
    {{input name="email" id="email" value=model.email}}
  </div>

  <div class="buttons-wrapper">
    <button type="submit">{{t 'buttons.submit'}}</button>
  </div>
</form>


{{outlet}}