<aside class="drawer">
    <header>
        <button {{action 'toggleDrawer'}} class="drawer-toggle-button icon-button">
            {{svg-icon _size=24 _name="x"}}
        </button>
    </header>
    {{#if session.isAuthenticated}}
    {{#link-to 'profile' me.model.id}}
        {{icon-image data=me.model image=avatarImage _size=128}}

        <h3>
            {{me.model.username}}
        </h3>

    {{/link-to}}
    <nav>
        <ul class="menu">
            <li class="leaf">
                {{link-to (t 'links.home') 'index'}}
            </li>
            {{!--
            <li class="leaf">
                {{link-to (t 'navigation.create_product') 'create-product'}}
            </li>
            <li class="leaf">
                {{link-to (t 'navigation.orders') 'orders'}}
            </li>
            --}}
        </ul>
        <button {{action 'signOut'}}>{{t 'buttons.signout'}}</button>
    </nav>
    {{/if}}
</aside>

<div class="drawer__overlay" {{action 'toggleDrawer'}}></div>

<main class="main-content">
    {{yield (hash toggleDrawer=(action 'toggleDrawer') isAuthenticated=session.isAuthenticated)}}
</main>